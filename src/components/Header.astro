---
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Order', href: '/order' },
    { linkText: 'Staff Login', href: '/staff/login' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-12 sm:pt-8 sm:pb-16 border-b border-dark-border">
    <div class="flex items-center gap-3">
        <img
            src="https://cdn.builder.io/api/v1/image/assets%2Fd8f9ebfc30da47dc8c3575ff1f3edf08%2Fdffbe99b6c204636b6b1aa401d5842bb?format=webp&width=800"
            alt="Flower Lighting Logo"
            class="h-10 sm:h-12 w-auto"
        />
        <h1 class="text-xl sm:text-2xl font-bold text-white">Flower Lighting</h1>
    </div>
    {
        navItems && (
            <ul class="flex flex-wrap gap-x-6 gap-y-2">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="text-white hover:text-primary transition-colors font-medium text-sm sm:text-base">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
