---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Staff Login - Flower Lighting">
    <div class="flex flex-col gap-12 pb-16 min-h-screen flex items-center justify-center">
        <div class="w-full max-w-md">
            <section class="text-center mb-12">
                <h1 class="text-4xl font-bold text-white mb-4">Staff Portal</h1>
                <p class="text-gray-300">Login to access the dashboard</p>
            </section>

            <section class="bg-dark-card border border-dark-border rounded-lg p-8">
                <form id="loginForm" class="flex flex-col gap-6">
                    <div>
                        <label for="email" class="block text-white font-semibold mb-2">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required
                            class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg text-white focus:outline-none focus:border-primary transition-colors"
                            placeholder="staff@flowerlighting.com"
                        />
                    </div>

                    <div>
                        <label for="password" class="block text-white font-semibold mb-2">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required
                            class="w-full px-4 py-3 bg-dark-bg border border-dark-border rounded-lg text-white focus:outline-none focus:border-primary transition-colors"
                            placeholder="••••••••"
                        />
                    </div>

                    <div id="errorMessage" class="hidden text-red-400 text-sm bg-red-900/20 border border-red-700 rounded px-4 py-2"></div>

                    <button 
                        type="submit"
                        class="w-full px-6 py-3 bg-primary text-dark-bg font-bold rounded-lg hover:opacity-90 transition-opacity text-lg mt-4"
                    >
                        Login
                    </button>
                </form>

                <div class="mt-6 p-4 bg-dark-bg rounded border border-dark-border">
                    <p class="text-xs text-gray-500 mb-2"><strong>Demo Credentials:</strong></p>
                    <p class="text-xs text-gray-400">Email: <code class="text-primary">staff@flowerlighting.com</code></p>
                    <p class="text-xs text-gray-400">Password: <code class="text-primary">admin123</code></p>
                </div>
            </section>

            <div class="text-center mt-8">
                <a href="/" class="text-primary hover:text-white transition-colors">
                    ← Back to Home
                </a>
            </div>
        </div>
    </div>
</Layout>

<script>
    document.getElementById('loginForm')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const form = e.target as HTMLFormElement;
        const errorDiv = document.getElementById('errorMessage');
        
        const email = (form.querySelector('[name="email"]') as HTMLInputElement).value;
        const password = (form.querySelector('[name="password"]') as HTMLInputElement).value;

        const { loginStaff } = await import('../../utils/storage');
        
        if (loginStaff(email, password)) {
            // Redirect to dashboard
            window.location.href = '/staff/dashboard';
        } else {
            // Show error
            if (errorDiv) {
                errorDiv.textContent = 'Invalid email or password';
                errorDiv.classList.remove('hidden');
            }
        }
    });
</script>
